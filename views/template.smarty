<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head> 
	<title>{Config::get('project_name', '')} Admin</title>
	{Asset::css($css)}
	{include file=$admin_css}
	{Asset::js($js)}
	{include file=$admin_js}
</head>
<body>
	{if Auth::instance('SimpleAuth')->check()}
		<form action="/admin" method="get">
			<input type="submit" value="Logout" name="logout" />
		</form>
		<br />
		<div id="admin-tabs">
			{foreach $tabs as $key => $val}
				<div class="tab{if $key eq $table} active{/if}">
					<a href="/admin/list/{$key}"><b>{Inflector::camelize($key)}</b></a>
				</div>
			{/foreach}
		</div>
		<hr class="clearfix" />
	{/if}
	{$body}
</body>
</html>